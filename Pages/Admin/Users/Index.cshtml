@page
@model IndexModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Admin Users";
}

<h3 class="navLink">
    <a asp-page="NewUser">New User</a>
</h3>
<table>
    <caption>All surveys</caption>
    <thead>
        <tr>
            <th>User #</th>
            <th>Username</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users!)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Username</td>
                <td><a asp-page="./Edit" asp-route-id="@user.Id">Edit</a></td>
            </tr>
        }
    </tbody>
</table>