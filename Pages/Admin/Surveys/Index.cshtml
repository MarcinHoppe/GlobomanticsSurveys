@page
@model IndexModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Surveys Admin";
}

<table>
    <caption>All surveys</caption>
    <thead>
        <tr>
            <th>Survey #</th>
            <th>Title</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var survey in Model.Surveys)
        {
            <tr>
                <td>@survey.Id</td>
                <td><a asp-page="./View" asp-route-id="@survey.Id">@survey.Title</a></td>
                <td><a asp-page="./Edit" asp-route-id="@survey.Id">Edit</a> |
                <a asp-page="./Delete" asp-route-id="@survey.Id">Delete</a></td>
            </tr>
        }
    </tbody>
</table>